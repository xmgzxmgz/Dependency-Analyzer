{
  "include": ["src/**/*.js", "bin/**/*.js"],
  "exclude": ["tests/**/*.js", "node_modules/**", "coverage/**"],
  "reporter": ["text", "html", "lcov", "json"],
  "report-dir": "coverage",
  "temp-dir": ".nyc_output",
  "check-coverage": true,
  "lines": 80,
  "statements": 80,
  "functions": 80,
  "branches": 70,
  "watermarks": {
    "lines": [80, 95],
    "functions": [80, 95],
    "branches": [70, 90],
    "statements": [80, 95]
  }
}
